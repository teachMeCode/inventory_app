<!-- This is the collection of all the items -->

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <button type="button" class="btn btn-primary"><%= link_to "Add new Item", new_item_path, {style:"color: white;"} %></button>
    </div>
    <!-- flash alert -->
    <div class="col-md-3 text-center  ">
        <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <button type="button" class="close" data-dismiss="alert">
            <span aria=hidden="true">&times;</span>
            <span class="sr-only">Close</span> </button>
              <%= value %>    
        </div>
        <% end %>
    </div>
    <div class="col-md-5">
    </div>
  </div> 
  <br>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <h4> <%= current_user.nm_first %>, here is your stuff.</h4>
      </div>
    </div> <!-- panel heading -->
    <div class="panel-body bg-default">
      <div class="scroll-box">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Medium</th>
            <th>Theme</th>
            <th>Size</th>
            <th>Status</th>
            <th>Location</th>
            <th>Data Finished</th>
            <th>Edit Item</th>
            <th>Remove Item</th>
          </tr>
        </thead> 
        
        <tbody>
          <% @item.each do |i| %>
          <tr>
            <td><%= i.title%></td>
            <td><%= i.medium%></td>
            <td><%= i.theme%></td>
            <td><%= i.size%></td>
            <td><%= i.status%></td>
            <td><%= i.location%></td>
            <td><%= i.dt_finished%></td>
            

            <td>
              
              <button class="btn btn-success" style="width: 70px;">
               <%= link_to "Edit", edit_item_path(i), {style:"color: white;"} %>  
              </button>
             

            </td> <!-- (i) is for the item id -->
            
            <td>
              <button class="btn btn-danger" style="width: 70px;"> 
                <%= link_to "Delete", i, :style=> 'color:white;', method: :delete, data: { confirm: "Are you sure you want to delete #{i.title}?"} %>
              </button>
            </td>
          </tr>
          <%end%>
        </tbody> 
        
      </table>
      </div> <!-- scroll -->
    </div>   <!-- end panel body -->
  </div> <!-- end panel -->
</div>

