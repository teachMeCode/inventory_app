<!-- This is the collection of all the items -->

<h3>Here are your items:</h3>
<%= link_to "New Item", new_item_path %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Medium</th>
      <th>Theme</th>
      <th>Size</th>
      <th>Status</th>
      <th>Location</th>
      <th>Data Finished</th>
      <th>Remove Item</th>
      <th>Edit Item</th>

    </tr>
  </thead> 
  <tbody>
    <% @item.each do |i| %>
      <tr>
        <td><%= i.title%></td>
        <td><%= i.medium%></td>
        <td><%= i.theme%></td>
        <td><%= i.size%></td>
        <td><%= i.status%></td>
        <td><%= i.location%></td>
        <td><%= i.dt_finished%></td>
        <td><%= link_to "Delete", i, method: :delete, data: { confirm: "Are you sure you want to delete #{i.title}?"}%></td>
        <td><%= link_to "Edit", edit_item_path(i) %></td> <!-- (i) is for the item id -->
      </tr>
    <%end%>
   
  </tbody>
</table>
