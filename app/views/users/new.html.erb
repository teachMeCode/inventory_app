<!--User sign up page-->

<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <button type="button" class="close" data-dismiss="alert">
            <span aria=hidden="true">&times;</span>
            <span class="sr-only">Close</span> </button>
          <%= value %>    
        </div>
      <% end %>
      <h3>Experience the rad. Sign up!</h3>
    </div>
    <div class="col-md-4">
    </div>
  </div> <!--End of row-->
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    <!-- form -->
      <div class="form">
        <%= form_for @user do |f| %>
        <div class="form-group"> <!--1-->
          <span class="text-muted"><%= f.text_field :nm_first, class: 'form-control', placeholder: 'First Name' %></span>
        </div>
        <div class="form-group"> <!--2-->
          <%= f.text_field :nm_last, class: 'form-control', placeholder: 'Last Name' %>
        </div>
        <div class="form-group"> <!--3-->
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group"> <!--4-->
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group"> <!--5-->
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Sign Up', class: 'btn btn-success'%>
        </div>
          <% end %>
      </div>
      <small class="text-muted">If you already have a login please click <button type="button" class="btn btn-defualt btn-xs"><%= link_to ' here', new_session_path %></button></small>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div> <!--End of container-->
  