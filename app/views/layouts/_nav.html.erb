<!--This is the nav bar across all pages--> 


<div class="navbar navbar-standard" role="navigation">
  <div class="container">
    <div class="row">

      <% if current_user %>
        <div class="col-md-11">
        <h4>Welcome, <%= current_user.nm_first %>!</h4>
        </div>
        <div class="col-md-1">
        <div class="btn btn-default"><%= link_to 'Logout', session_path, method: :delete %></div>
        </div> 
      <% else %>
        <div class="col-md-10">

         <%= link_to root_path, class: "btn btn-default pop" do %>
          <span class="glyphicon glyphicon-home"></span>
         <% end %> 
          
        </div>
        <div class="col-md-2"> 
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Login / Sign Up  <span class="caret"></span></button>

              <ul class="dropdown-menu" role="menu">
                  <li><a href="#"> <%= link_to 'Sign Up', new_user_path %></a></li>
                  <li><a href="#"> <%= link_to 'Login', new_session_path %></a></li>
              </ul>
            
          </div>  
        </div>        
      <% end %>
    </div> <!-- end of row -->
    <hr>
  </div> <!-- end of container     -->
</div> <!-- end of navbar -->



