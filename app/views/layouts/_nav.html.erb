<!--This is the nav bar across all pages--> 


<div class="navbar navbar-standard" role="navigation">
  <div class="container">
    <div class="row">
      <% if current_user %>
        <div class="col-md-11">
        <h4>Welcome, <%= current_user.nm_first %>!</h4>
        </div>
        <div class="col-md-1">
        <div class="btn btn-default"><%= link_to 'Logout', session_path, method: :delete %></div>
        </div> 
      <% else %>
        <div class="col-md-10">
          <h5 class="lead"> <%= link_to 'Home', root_path %></h5>
        </div>
        <div class="col-md-2">  
          <div class="btn btn-default"> <%= link_to 'Sign Up', new_user_path %> </div>
          <div class="btn btn-default"> <%= link_to 'Login', new_session_path %> </div>
        </div>
      <% end %>
    </div>
    <hr>
  </div>    
</div>



